{
  "name": "meetup",
  "private": true,
  "description": "Scan a QR code at a meetup and see everyone else that scanned the QR code.",
  "license": "MIT",
  "keywords": [
    "antler",
    "irl-browser",
    "qr-code",
    "local-first",
    "did",
    "decentralized-identity",
    "decentralized-identifiers"
  ],
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/ensure-client-dist.js && node scripts/update-metadata.js && pnpm --filter=@meetup/shared build",
    "dev": "concurrently \"wrangler dev --local\" \"pnpm dev:client\" --names \"worker,client\" --prefix-colors \"blue,green\"",
    "dev:alchemy": "alchemy dev",
    "dev:client": "pnpm --filter=./client dev",
    "dev:server": "wrangler dev --local",
    "deploy": "pnpm build && alchemy deploy",
    "destroy": "alchemy destroy",
    "build": "node scripts/update-metadata.js && pnpm run --filter=@meetup/shared build && pnpm run --filter=./client build",
    "build:shared": "pnpm --filter=@meetup/shared build",
    "build:client": "pnpm --filter=./client build",
    "db:generate": "pnpm --filter=./server db:generate",
    "db:migrate:dev": "tsx scripts/migrate-local.ts"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "base58-universal": "^2.0.0",
    "drizzle-orm": "^0.44.7",
    "jwt-decode": "^4.0.0"
  },
  "devDependencies": {
    "alchemy": "0.77.0",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "wrangler": "^4.46.0"
  }
}
