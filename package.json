{
  "name": "draw-on-my-phone-game",
  "private": true,
  "description": "Draw on my phone game",
  "license": "MIT",
  "keywords": [
    "antler",
    "irl-browser",
    "qr-code",
    "local-first",
    "did",
    "decentralized-identity",
    "decentralized-identifiers"
  ],
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/ensure-client-dist.js && pnpm --filter=@internal/shared build",
    "dev": "concurrently \"wrangler dev --local\" \"pnpm dev:client\" --names \"worker,client\" --prefix-colors \"blue,green\"",
    "dev:client": "pnpm --filter=./client dev",
    "dev:server": "wrangler dev --local",
    "deploy:cloudflare": "pnpm build && alchemy deploy",
    "destroy:cloudflare": "alchemy destroy",
    "build": "pnpm run --filter=@internal/shared build && pnpm run --filter=./client build",
    "build:client": "pnpm --filter=./client build",
    "db:generate": "pnpm --filter=./server db:generate",
    "db:migrate:dev": "tsx scripts/migrate-local.ts"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "base58-universal": "^2.0.0",
    "drizzle-orm": "^0.44.7",
    "jwt-decode": "^4.0.0"
  },
  "devDependencies": {
    "alchemy": "0.77.0",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "wrangler": "^4.53.0"
  }
}
